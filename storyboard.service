[Unit]
Description=Storyboard API Service
After=syslog.target network.target mariadb.service

[Service]
Type=simple
User=storyboard
Group=storyboard
SyslogIdentifier=storyboard
EnvironmentFile=-/etc/sysconfig/storyboard
ExecStart=/usr/sbin/uwsgi --plugin python --http-socket :20000 --wsgi-file /usr/lib/python2.7/site-packages/storyboard/api/app.wsgi

[Install]
WantedBy=multi-user.target
